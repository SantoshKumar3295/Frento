<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="#000000"

    tools:context="com.example.anshraj.fblog.MainActivity"
    android:clickable="true"
    android:theme="@style/AppThemeu">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/rentcolor"
        android:scaleType="center"


        android:id="@+id/imageView" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/whiteback"


        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/imageView"
        android:layout_above="@+id/login_button" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:width="300dp"
        android:layout_marginBottom="23dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/button"

        android:shadowColor="#787575"
        android:background="@drawable/myb"

        android:typeface="serif"
        style="@style/AppTheme"
        android:textColor="@color/material_grey_850"
        android:singleLine="false"
        android:layout_alignTop="@+id/button2"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="784dp"
        android:layout_marginStart="784dp" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="flento"
        android:id="@+id/textView5"
        android:clickable="true"
        android:textSize="60dp"
        android:textStyle="italic"
        android:typeface="serif"
        android:textColor="@android:color/holo_red_light"
        android:textIsSelectable="false"
        style="@style/AppTheme"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_marginTop="112dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="E-mail"
        android:layout_below="@+id/textView5"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:hint="Password" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="SignUp"
        android:id="@+id/button2"
        android:shadowColor="#787575"
        android:typeface="sans"
        style="@style/AlertDialog.AppCompat"
        android:background="@drawable/myb"
        android:layout_marginBottom="42dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignRight="@+id/editText2"
        android:layout_alignEnd="@+id/editText2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="get your room anywhere,anytime..."
        android:id="@+id/textView4"
        android:layout_above="@+id/editText"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Â®"
        android:id="@+id/textView6"
        android:layout_marginTop="15dp"
        android:layout_alignTop="@+id/textView5"
        android:layout_toRightOf="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="or"
        android:id="@+id/textView7"
        android:textColor="#ffffff"
        android:layout_below="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:layout_marginTop="8dp" />

</RelativeLayout>
